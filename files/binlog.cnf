# MariaDB database server configuration file - for servers producing binary logs - ie masters
# Individual server entries are in my.cnf.$hostname

[server]
log_bin                         = /var/log/mysql/mariadb-bin
log_bin_index                   = /var/log/mysql/mariadb-bin.index
sync_binlog                     = 5
binlog_format			= MIXED
expire_logs_days                = 10
max_binlog_size                 = 100M
log_slave_updates               = 1
