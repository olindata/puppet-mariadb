# This debian.cnf is the same on all hosts. They need to have the same dedian password because passwords are replicated. 

[client]
host     = localhost
user     = debian-sys-maint
password = <%= scope.lookupvar('mariadb::params::debian_sys_maint_pass') %>
socket   = /var/run/mysqld/mysqld.sock
[mysql_upgrade]
host     = localhost
user     = debian-sys-maint
password = <%= scope.lookupvar('mariadb::params::debian_sys_maint_pass') %>
socket   = /var/run/mysqld/mysqld.sock
basedir  = /usr
